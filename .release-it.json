{
  "git": {
    "commitMessage": "chore: release v${version}",
    "tagName": "v${version}",
    "requireCleanWorkingDir": true,
    "requireBranch": "main"
  },
  "npm": {
    "publish": true,
    "token": "${NPM_TOKEN}"
  },
  "github": {
    "release": true,
    "releaseName": "Release ${version}",
    "token": "${GITHUB_TOKEN}"
  },
  "hooks": {
    "before:init": ["pnpm test"]
  },
  "plugins": {
    "@release-it/conventional-changelog": {
      "preset": "angular",
      "infile": "CHANGELOG.md"
    }
  }
}